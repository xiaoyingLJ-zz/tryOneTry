{
    "contentVersion": "1.0.0.0",
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "parameters": {
        "openports": {
            "type": "string",
            "metadata": {
                "description": "Format: 8050, 443, 80"
            }
        }
    },
    "variables": {
        "dataFactoryName":  "xiaoyingDF",
        "apiVersion": "2015-10-01",
        "singleQuote": "'",
        "openports": "[split(parameters('openports'), ',')]"
    },
    "resources": [
        /*{
            "name": "[variables('dataFactoryName')]",
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.DataFactory/datafactories",
            "location": "eastus",
            "resources": [
                {
                    "dependsOn": [ "[concat('Microsoft.DataFactory/dataFactories/', variables('dataFactoryName'))]" ],
                    "type": "gateways",
                    "apiVersion": "[variables('apiVersion')]",
                    "name": "GatewayUsingARM",
                    "properties": {
                        "description": "my gateway"
                    }
                }            
            ]
        }*/
        { 
            "name": "[concat('examplecopy-', variables('openports')[copyIndex()])]", 
            "type": "Microsoft.Web/sites", 
            "location": "[resourceGroup().location]", 
            "apiVersion": "2015-08-01",
            "copy": { 
               "name": "websitescopy", 
               "count": "[length(parameters('openports'))]" 
            }, 
            "properties": {
                "serverFarmId": "hostingPlanName"
            } 
        }
    ],
    "outputs": {
        "ports": {
            "type": "string",
            "value": "concat(variables('openports')[0])"
        }
   }
}
